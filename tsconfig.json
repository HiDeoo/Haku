{
  "extends": "@hideoo/tsconfig",
  "compilerOptions": {
    "allowJs": false,
    "baseUrl": "src",
    "exactOptionalPropertyTypes": false,
    "jsx": "preserve",
    "noEmit": true,
    "target": "es2015",
    "types": ["unplugin-icons/types/react"],
    "typeRoots": ["node_modules/@types", "types"]
  },
  "ts-node": {
    "compilerOptions": {
      "module": "CommonJS"
    },
    "require": ["tsconfig-paths/register"],
    "swc": true
  },
  "include": ["next-env.d.ts", "**/*.ts", "**/*.tsx"],
  "exclude": ["node_modules", "src/sw"]
}
