    "vitest": "0.26.2"
  },
  "engines": {
    "node": "16.x"
  },
  "packageManager": "pnpm@7.13.0",
  "pnpm": {
    "patchedDependencies": {
      "use-editable@2.3.3": "patches/use-editable@2.3.3.patch"
    },
    "peerDependencyRules": {
      "ignoreMissing": [
        "vite"
      ]
    },
    "updateConfig": {
      "ignoreDependencies": [
        "@types/node"
      ]
    }
  },
  "prisma": {
    "seed": "ts-node prisma/seed.ts"
  },
  "keywords": [
    "note",
    "notebook",
    "to-do",
    "list"
  ],
  "bugs": {
